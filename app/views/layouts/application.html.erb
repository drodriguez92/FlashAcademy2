<!DOCTYPE html>
<html>
  <head>
    <title>FlashAcademy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if flash[:errors] %>
      <ul>
        <% flash[:errors].each do |err| %>
          <li>
            <%= err %>
          </li>
        <% end %>
      </ul>
    <% end %>

    <%= yield %>
  </body>
</html>
